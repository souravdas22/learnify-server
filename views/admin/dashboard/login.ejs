<%- include('header.ejs') %>

  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo d-flex justify-content-center mx-auto align-items-center gap-3">
                  <img src="https://cdn-icons-png.flaticon.com/128/2436/2436874.png" style="height: 4rem; width: 4rem; object-fit: contain;" alt="Logo">
                  <h3>Learnify</h3>
                </div>
                <h4>Login</h4>
                <form id="loginForm" class="pt-3" action="/login" method="post">
                  <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control form-control-lg" id="email" name="email"
                      placeholder="abc@gmail.com" required>
                  </div>
                  <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control form-control-lg" id="password" name="password"
                      placeholder="Password" required>
                  </div>
                  <div class="mt-3 d-grid gap-2">
                    <button type="submit"
                      class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">SIGN
                      IN</button>
                  </div>
                  <div class="my-2 d-flex justify-content-end align-items-center">
                    <a href="/admin/forget-password" class="auth-link text-primary">Forgot password?</a>
                  </div>
                  <div class="text-end mt-4 font-weight-light">
                    Don't have an account? <a href="/admin/register"
                      class="text-primary text-decoration-none fs-6">Register</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
  </body>

  </html>